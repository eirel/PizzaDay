h1
	font-size: 3em
	margin-top: 0
	margin-bottom: 30px
h2
	margin-top: 0
h3
	font-size: 2em
	margin-top: 0
	margin-bottom: 20px

.app__sidebar
	width: 320px
	border-right: 1px solid #EEEEEE
	background: rgba(255,255,255,.8)
	min-height 100vh
	margin-left: -320px
	transition .3s ease-in-out

	&.opened
		margin-left: 0

	&::before
		content ''
		color: rgba(0, 0, 0, 0.870588);
		transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms;
		box-sizing: border-box;
		font-family: Roboto, sans-serif;
		-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
		box-shadow: rgba(0, 0, 0, 0.117647) 0px 1px 6px, rgba(0, 0, 0, 0.117647) 0px 1px 4px;
		border-radius: 0px;
		position: relative;
		z-index: 1100;
		width: 100%;
		padding-left: 24px;
		padding-right: 24px;
		height: 64px
		display: block
		background-color: rgb(222, 79, 79);

.app__nav
	margin-top: 40px

.app__section
	min-height calc(100vh - 64px)
	width 100%
	position: relative
	padding: 30px 15px

.app__layout main
	position: relative

	&::before
		content ''
		@extend .posa
		background-color: rgba(255,255,255, .95)

.app__accounts
	margin-right: 20px
	display: inline-block;
	vertical-align: top;
	margin-top: 0;


#login-name-link,
#login-sign-in-link
	color: #fff
	line-height: 45px

#login-dropdown-list
	top: 10px
	right: -1px
	left auto

#login-buttons .login-close-text
	float: right;
	right: 10px;


.color--brand
	color: rgb(222, 79, 79)
	
a.underline:hover
	text-decoration: underline

.tearsheet
	border-top-width: 1px;
	border-right-width: 1px;
	border-left-width: 1px;
	border-style: solid solid none;
	border-top-color: rgb(217, 217, 217);
	border-right-color: rgb(217, 217, 217);
	border-left-color: rgb(217, 217, 217);
	max-width: 100%
	padding: 20px
	margin-bottom: 30px
	overflow: hidden;
	position: relative

	&::after
		content ''
		background-image: url(http://www.material-ui.com/images/bottom-tear.svg)
		background-repeat: repeat-x
		display: block
		position: absolute
		bottom: 0
		left: 0
		height: 10px
		width: 100%

.tearsheet__subheader
	margin-top: -20px
	margin-left: -16px

.form--group-create

	.image
		width: 100%
		max-height: 180px
		object-fit: cover
		margin-top: 20px

	.logo
		height: 150px
		margin-top: 20px
		background-size: 100% auto
		background-position: center center
		background-repeat: no-repeat

	.btn--create
		margin-top: 20px !important
		margin-bottom: 20px !important

		button
			background-color: rgb(222, 79, 79) !important

.form--add-item
	margin-bottom: 20px

	button
		margin-top: 30px
		background-color: rgb(255, 152, 0) !important

.badge--notification
	top: 0;
	padding-bottom: 0 !important;
	padding-top: 0 !important;
	margin-right: 20px;


/* -------------------- Groups & Invites -------------------- */

.group__heading
	text-align: center
	display: inline-block;

.group__logo
	width: 180px
	height: 180px
	display: inline-block
	border-radius 50%
	margin-right: 20px
	margin-bottom: 20px
	@extend .bgcover

.group__btn
	margin-top: 40px


.group__widget,
.invite__widget
	width: 100%
	display: inline-block
	margin-bottom: 30px

	.members
		font-style: italic;
		font-size: 14px;

	&:hover
		box-shadow: rgba(0, 0, 0, 0.247059) 0px 14px 45px, rgba(0, 0, 0, 0.219608) 0px 10px 18px !important

	.logo
		background-size: 100% auto
		height auto
		width: 100%

		&::before
			content ''
			display: block
			padding-bottom: 56%


	.content
		padding: 20px

.btn--delete button
	background-color: rgb(222, 79, 79) !important

.btn--join button
	background-color: #009688 !important


/* -------------------- Menu -------------------- */

.menu
	padding-bottom: 30px

.menu__item
	padding: 15px 0
	border-bottom: 2px solid rgba(224, 224, 224,.9)

	&.edit td
		background-color: rgba(255, 255, 141,.8) !important

	&:last-child
		border-bottom: none !important

	.quantity__btn
		display: inline-block !important

		button
			width: 25px !important
			height: 25px !important
		svg
			transform: scale(.8)

	.quantity__icon
		width: inherit !important
		height: inherit !important

	.transparent
		background: transparent
		border none
		outline none

	.quantity
		margin: 0 10px
		//width: 100%

	.quantity__wrapper
		justify-content: center

	.cell
		position: relative

		.cell__container
			@extend .posa
			@extend .flex--align-center
			padding: 0 24px;

		input
			max-width: 100%

	.price
		font-style: italic

	.smallIcon
		width: 24px
		height: 24px
		padding: 0

	.small
		width: 28px
		height: 28px
		padding: 0

/* -------------------- Orders -------------------- */

.orders__table, .orders__body
	min-width: 700px

.orders__footer
	td
		padding: 0 !important
	td:first-child
		display: none !important
