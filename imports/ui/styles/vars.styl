.tearsheet
	border-top-width: 1px
	border-right-width: 1px
	border-left-width: 1px
	border-style: solid solid none
	border-top-color: rgb(217, 217, 217)
	border-right-color: rgb(217, 217, 217)
	border-left-color: rgb(217, 217, 217)
	max-width: 100%
	margin-bottom: 30px
	padding 20px
	max-height 420px
	overflow: hidden
	position: relative
	
	&.high
		max-height initial

	&::after
		content ''
		background-image: url(http://www.material-ui.com/images/bottom-tear.svg)
		background-repeat: repeat-x
		display: block
		position: absolute
		bottom: 0
		left: 0
		height: 10px
		width: 100%
		
